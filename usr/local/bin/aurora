# ============================================================================
# SISTEMA DE LAYOUTS RESPONSIVOS
# ============================================================================

# Detectar largura e altura do terminal
get_terminal_dimensions() {
    local cols=$(tput cols 2>/dev/null || echo "80")
    local lines=$(tput lines 2>/dev/null || echo "24")
    echo "$cols $lines"
}

# Calcular layout din√¢mico baseado no terminal
calculate_layout() {
    local cols=$(get_terminal_dimensions | cut -d' ' -f1)
    
    # Definir layouts baseados na largura
    if (( cols >= 120 )); then
        echo "ultra_wide"
    elif (( cols >= 100 )); then
        echo "wide"
    elif (( cols >= 80 )); then
        echo "standard"
    elif (( cols >= 60 )); then
        echo "narrow"
    elif (( cols >= 40 )); then
        echo "minimal"
    else
        echo "tiny"
    fi
}

# ============================================================================
# SISTEMA DE CAIXAS INTELIGENTES
# ============================================================================

# Fun√ß√£o para criar caixa com estilo personaliz√°vel
create_fancy_box() {
    local title="$1"
    local content="$2"
    local style="${3:-light}"
    local border_color="${4:-106;73;40}"
    local fill_color="${5:-190;173;162}"
    local width="${6:-auto}"
    
    # Obter dimens√µes do terminal
    local cols=$(get_terminal_dimensions | cut -d' ' -f1)
    
    # Calcular largura da caixa
    if [[ "$width" == "auto" ]]; then
        width=$((cols - 6))
        ((width < 50)) && width=50
        ((width > 90)) && width=90
    fi
    
    # Calcular altura baseada no conte√∫do
    local content_lines
    readarray -t content_lines <<< "$(echo "$content" | fold -w $((width - 4)) -s)"
    local height=$((${#content_lines[@]} + 6))
    
    # Obter caracteres do estilo
    local tl="${BOX_CHARS[${style}_tl]}"
    local tr="${BOX_CHARS[${style}_tr]}"
    local bl="${BOX_CHARS[${style}_bl]}"
    local br="${BOX_CHARS[${style}_br]}"
    local h="${BOX_CHARS[${style}_h]}"
    local v="${BOX_CHARS[${style}_v]}"
    local mid_t="${BOX_CHARS[${style}_mid_t]}"
    local mid_b="${BOX_CHARS[${style}_mid_b]}"
    local mid_l="${BOX_CHARS[${style}_mid_l]}"
    local mid_r="${BOX_CHARS[${style}_mid_r]}"
    local cross="${BOX_CHARS[${style}_cross]}"
    
    # Criar linhas horizontais
    local top_line=$(printf "%.0s$h" $(seq 1 $width))
    local mid_line=$(printf "%.0s$h" $(seq 1 $((width - 2))))
    
    # Linha do t√≠tulo centralizada
    local title_padding=$(( (width - ${#title} - 2) / 2 ))
    if (( title_padding < 1 )); then
        title_padding=1
    fi
    
    # Exibir a caixa
    echo -e "\033[38;2;${border_color}m${tl}${top_line}${tr}\033[0m"
    echo -e "\033[38;2;${border_color}m${v}\033[0m\033[38;2;${fill_color}m$(printf "%*s%s%*s" $title_padding "" "$title" $((width - ${#title} - title_padding - 2)) "")\033[38;2;${border_color}m${v}\033[0m"
    echo -e "\033[38;2;${border_color}m${mid_l}${mid_line}${mid_r}\033[0m"
    
    # Conte√∫do
    for line in "${content_lines[@]}"; do
        local line_width=${#line}
        local line_padding=$(( (width - line_width - 2) / 2 ))
        if (( line_padding < 1 )); then
            line_padding=1
        fi
        echo -e "\033[38;2;${border_color}m${v}\033[0m\033[38;2;${fill_color}m$(printf "%*s%s%*s" $line_padding "" "$line" $((width - line_width - line_padding - 2)) "")\033[38;2;${border_color}m${v}\033[0m"
    done
    
    echo -e "\033[38;2;${border_color}m${bl}${top_line}${br}\033[0m"
}

# ============================================================================
# SISTEMA DE ANIMA√á√ïES SUAVES
# ============================================================================

# Anima√ß√£o de carregamento
show_loading_animation() {
    local message="$1"
    local duration="${2:-3}"
    local chars=("‚óê" "‚óì" "‚óë" "‚óí")
    
    for ((i=0; i<duration*4; i++)); do
        local char="${chars[$((i % 4))]}"
        printf "\r\033[38;2;106;73;40m${char}\033[0m \033[38;2;190;173;162m$message\033[0m"
        sleep 0.25
    done
    printf "\r\033[38;2;106;73;40m‚úì\033[0m \033[38;2;190;173;162m$message\033[0m\n"
}

# Anima√ß√£o de digita√ß√£o
typewriter_effect() {
    local text="$1"
    local speed="${2:-0.05}"
    
    for ((i=0; i<${#text}; i++)); do
        echo -n "${text:$i:1}"
        sleep "$speed"
    done
    echo
}

# ============================================================================
# INTERFACES VISUAIS AVAN√áADAS
# ============================================================================

# Banner principal com estilo art√≠stico
show_fancy_banner() {
    clear
    local layout=$(calculate_layout)
    local cols=$(get_terminal_dimensions | cut -d' ' -f1)
    
    # Definir estilo baseado no layout
    local banner_width=$((cols - 8))
    ((banner_width < 60)) && banner_width=60
    ((banner_width > 100)) && banner_width=100
    
    local h=$(printf "‚ïê%.0s" $(seq 1 $banner_width))
    local title="üç´ AURORA v$SCRIPT_VERSION"
    local subtitle="Gerenciador de Temas Visuais Avan√ßado"
    local theme_line="Tema: Ganache (Chocolate) ‚ú¶"
    
    echo -e "\033[38;2;106;73;40m‚îè${h}‚îì\033[0m"
    
    # T√≠tulo centralizado
    local title_len=${#title}
    local title_pad=$(( (banner_width - title_len) / 2 ))
    echo -e "\033[38;2;106;73;40m‚îÉ\033[0m\033[38;2;190;173;162m$(printf "%*s%s%*s" $title_pad "" "$title" $((banner_width - title_len - title_pad)) "")\033[38;2;106;73;40m‚îÉ\033[0m"
    
    # Subt√≠tulo
    local subtitle_len=${#subtitle}
    local subtitle_pad=$(( (banner_width - subtitle_len) / 2 ))
    echo -e "\033[38;2;106;73;40m‚îÉ\033[0m\033[38;2;174;153;139m$(printf "%*s%s%*s" $subtitle_pad "" "$subtitle" $((banner_width - subtitle_len - subtitle_pad)) "")\033[38;2;106;73;40m‚îÉ\033[0m"
    
    # Linha do tema
    local theme_len=${#theme_line}
    local theme_pad=$(( (banner_width - theme_len) / 2 ))
    echo -e "\033[38;2;106;73;40m‚îÉ\033[0m\033[38;2;190;173;162m$(printf "%*s%s%*s" $theme_pad "" "$theme_line" $((banner_width - theme_len - theme_pad)) "")\033[38;2;106;73;40m‚îÉ\033[0m"
    
    echo -e "\033[38;2;106;73;40m‚îó${h}‚îõ\033[0m"
    echo
}

# Interface de status com elementos visuais avan√ßados
show_advanced_status() {
    show_fancy_banner
    
    # Container principal
    local status_content="üìä STATUS DO SISTEMA\n\n"
    
    # Status do Starship com indicador visual
    if command -v starship &> /dev/null; then
        local starship_version=$(starship --version 2>/dev/null | head -1)
        status_content+=" ${STATUS[success]} Starship: Instalado ($starship_version)\n"
    else
        status_content+=" ${STATUS[error]} Starship: N√£o instalado\n"
    fi
    
    # Status do KMSCON
    if command -v kmscon &> /dev/null; then
        status_content+=" ${STATUS[success]} KMSCON: Instalado\n"
    else
        status_content+=" ${STATUS[error]} KMSCON: N√£o instalado\n"
    fi
    
    # Status da FiraCode
    if fc-list | grep -q "FiraCode"; then
        status_content+=" ${STATUS[success]} FiraCode Nerd Font: Instalada\n"
    else
        status_content+=" ${STATUS[error]} FiraCode Nerd Font: N√£o instalada\n"
    fi
    
    # Tema atual
    if [[ -f "$STARSHIP_CONFIG" ]]; then
        local current_theme=$(grep -oP 'background = "\K[^"]*' "$STARSHIP_CONFIG" 2>/dev/null || echo "Padr√£o")
        status_content+=" ${STATUS[info]} Tema Atual: $current_theme\n"
    else
        status_content+=" ${STATUS[info]} Tema Atual: Padr√£o do sistema\n"
    fi
    
    # Mostrar caixa de status
    create_fancy_box "STATUS DO SISTEMA" "$status_content" "light" "106;73;40" "190;173;162" "auto"
    
    echo
    show_quick_commands
}

